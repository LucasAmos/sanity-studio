{
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasamos/sanity-studio.git"
  },
  "name": "@lucasamos/sanity-studio",
  "files": [
    "./schema.json"
  ],
  "exports": {
    ".": "./schema.json"
  },
  "main": "./schema.json",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "sanity dev",
    "start": "sanity start",
    "build": "sanity build",
    "build:dev": "SANITY_ACTIVE_ENV=development sanity build",
    "deploy": "sanity deploy",
    "deploy:dev": "SANITY_ACTIVE_ENV=development sanity deploy",
    "deploy-graphql": "sanity graphql deploy",
    "schema:extract": "sanity schema extract --enforce-required-fields",
    "typecheck": "tsc --noEmit",
    "undeploy": "sanity undeploy --yes",
    "undeploy:dev": "SANITY_ACTIVE_ENV=development sanity undeploy --yes",
    "validate:schema": "sanity schema validate",
    "validate:documents": "sanity documents validate --yes --level info",
    "release": "release-it --ci"
  },
  "keywords": [
    "sanity"
  ],
  "dependencies": {
    "@sanity/vision": "^4.4.0",
    "react": "^19.1",
    "react-dom": "^19.1",
    "sanity": "^4.4.0",
    "styled-components": "^6.1.18"
  },
  "devDependencies": {
    "@sanity/eslint-config-studio": "^5.0.2",
    "@types/react": "^19.1",
    "eslint": "^9.28",
    "prettier": "^3.5",
    "release-it": "^19.0.5",
    "typescript": "^5.8"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  },
  "hooks": {
    "after:bump": "yarn --mode update-lockfile"
  }
}
